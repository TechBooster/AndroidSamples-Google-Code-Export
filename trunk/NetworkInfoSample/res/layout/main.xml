
<RelativeLayout android:id="@+id/relativeLayout1"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<Button android:layout_height="10dip" android:id="@+id/center"
		android:layout_width="10dip" android:visibility="invisible"
		android:layout_centerInParent="true" />
	<Button android:layout_height="wrap_content" android:id="@+id/checkbutton"
		android:layout_below="@+id/center" android:layout_centerHorizontal="true"
		android:layout_width="fill_parent" android:text="Check Network Infomation" />

	<ImageView android:layout_height="100dip" android:layout_width="100dip" 
		android:id="@+id/imageView1" android:src="@drawable/icon" android:layout_above="@+id/checkbutton" 
		android:layout_centerHorizontal="true" android:layout_margin="10dip" />

</RelativeLayout>
